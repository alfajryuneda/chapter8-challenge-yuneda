{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
    // "jest/globals": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  // "plugins": ["jest"],
  "rules": {
    "class-methods-use-this": ["error", { "enforceForClassFields": false }],
    "linebreak-style": 0,
    "no-unused-vars": "off",
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "no-undef": "off",
    "no-unreachable": "off",
    "arrow-body-style": "off"
  }
}
